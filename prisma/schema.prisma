generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  clerkId String  @unique
  email   String?

  name    String?
  dob     DateTime?
  country String?

  profileComplete Boolean @default(false)

  createdAt DateTime   @default(now())
  campaigns Campaign[]
}

model Campaign {
  id          String  @id @default(cuid())
  title       String
  description String
  goalAmount  Int
  imageUrl    String?

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id])

  createdAt DateTime @default(now())
}
